---
interface Props {
  title: string;
  description: string;
  image: string;
  alt: string;
  hrefButton: string;
}

const { title, description, image, alt, hrefButton } = Astro.props;
---

<div class="flex flex-col md:flex-row gap-4 p-4 bg-[#0a1224] rounded-lg min-h-50">
  <div class="flex-1 m-auto">
    <h3 class="text-3xl mb-2 font-KosugiMaru">{title}</h3>

    <div class="w-60 h-auto md:hidden mb-4">
      <img 
        src={image} 
        alt={alt} 
        class="w-full h-full object-cover rounded-lg" 
      />
    </div>
    <p class="text-gray-300 mb-4">{description}</p>
    <a href={hrefButton} target="_blank" rel="noopener noreferrer" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded text-sm transition cursor-pointer hover:scale-105">
      Saber m√°s
    </a>
  </div>

  <div class="hidden md:block w-36 h-36 md:my-auto md:mx-4 hover:transition-transform hover:scale-105 cursor-pointer">
      <a href={image} target="_blank" rel="noopener noreferrer">
        <img 
          src={image} 
          alt={alt} 
          class="w-full h-full object-cover rounded-lg" 
        />
      </a>
  </div>
</div>